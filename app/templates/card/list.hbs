<div class="filters row">
    <div class="col-sm-8 col-xs-8">
        {{input value=searchQuery classNames="form-control" placeholder="Search..."}}
    </div>

    <div class="col-sm-4 col-xs-4">
        <button class="btn btn-default" {{action "toggleFilters"}}>
            Filters
        </button>
    </div>
</div>

<div class="filters row {{if showFilters '' 'hide'}}">
    <div class="col-sm-12">
        <div class="row filter-field">
            <div class="col-sm-4 col-xs-3">
                <label>CMC</label>
            </div>

            <div class="col-sm-8 col-xs-9">
                {{input value=cmc classNames="form-control"}}
            </div>
        </div>
    </div>
</div>

<div class="card-list">
    {{#each card in content}}
        <a href="#" {{action "selectCard" card}} id={{card.id}}>
            <h4>{{unbound card.name}}</h4>
        </a>
    {{/each}}
</div>