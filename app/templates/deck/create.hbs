<div class="row">
    <form class="form-horizontal col-sm-12" {{action "createDeck" on="submit"}}>
        <div class="form-group">
            <label class="control-label col-sm-4">Deck name</label>
            <div class="col-sm-8">
                {{input value=name class="form-control" placeholder="Name"}}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4">Private?</label>
            <div class="col-sm-8">
                {{input type="checkbox" checked=private class="form-control"}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-4">
                <button class="btn btn-primary" {{action "createDeck"}}>
                    Create
                </button>
            </div>
        </div>
    </form>
</div>
