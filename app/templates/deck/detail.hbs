<div class="row">
    <div class="col-sm-9">
        <h2>
            {{deck.title}}
            <small>{{deck.size}} cards</small>
        </h2>
    </div>

    <div class="col-sm-3">
        {{#if canEdit}}
            <a href="#" class="btn btn-danger" {{action "deleteDeck"}}>
                Delete
            </a>
        {{/if}}
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <div class="card-group">
            <strong>Creatures ({{collection-count deck.creatures}})</strong>

            {{deck-card-list collection=deck.creatures
                editing=canEdit}}
        </div>

        <div class="card-group">
            <strong>Enchantments ({{collection-count deck.enchantments}})</strong>

            {{deck-card-list collection=deck.enchantments
                editing=canEdit}}
        </div>
    </div>

    <div class="col-sm-3">
        <div class="card-group">
            <strong>Instants ({{collection-count deck.instants}})</strong>

            {{deck-card-list collection=deck.instants
                editing=canEdit}}
        </div>

        <div class="card-group">
            <strong>Sorceries ({{collection-count deck.sorceries}})</strong>

            {{deck-card-list collection=deck.sorceries
                editing=canEdit}}
        </div>
    </div>

    <div class="col-sm-3">
        <div class="card-group">
            <strong>Lands ({{collection-count deck.lands}})</strong>

            {{deck-card-list collection=deck.lands
                editing=canEdit}}
        </div>
    </div>

    <div class="col-sm-3">

    </div>
</div>
